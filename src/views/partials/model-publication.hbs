<div class="container">
    {{#each publications}}
    <div class="row mt-5 divPublication">
        <div class="col-12">
            <div class="d-flex align-items-center ms-2">
                <a href="/otherProfile/{{this.user._id}}"><img class="img-thumbnail rounded-circle"
                        src="/img/user/{{this.user.profile_image}}" alt="person" width="50px" height="50px"
                        class="rounded-circle"></a>
                <p class="fs-4 ms-2 mt-3">{{this.user.userName}}</p>
            </div>
        </div>
        <div class="col-12">
            <p class="fs-6 ms-2">{{this.description}}</p>
        </div>
        <div class="col-10">
            <div class="d-flex align-items-center">
                <img class="img-fluid img-publication" src="/img/post/{{this.image}}" alt="">
            </div>
        </div>
        <div class="col-2 separacion">
            <div class="divIcons__like">
                <i class="fa-solid fa-face-grin-wide icon-like {{equal this.like ../userName}}"
                    data-id="{{this._id}}"></i>
            </div>
            <div>
                <p class="numLikes" data-id="{{this._id}}">{{this.like.length}}</p>
            </div>
            <div class="divIcons__comment" data-id="{{this._id}}"></div>
            <div class="divIcons__rack">
                <img src="/pngIcons/rack.png" alt="" data-id="{{this._id}}" class="icon-rack">
            </div>
        </div>
    </div>
    <div class="row div-publication-tags" data-id="{{this._id}}">
        {{#each this.tags}}
        <div class="col-12">
            <div class="content-item-tag mt-3 mb-3" data-image="${tagName}" data-storename="${storeName}"
                data-price="${price}">
                <div>
                    <img src="pngIcons/{{this.image}}.png" alt="">
                    <p>{{this.storeName}}</p>
                </div>
                <div>
                    <p>{{this.price}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>

<div class="modal fade bd-example-modal-lg modal-comment" id="modal-comment" tabindex="-1" role="dialog"
    aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Comments</h5>
                <button type="button" class="close btn-close-modal-comment" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="content-chat">

            </div>
            <div class="m-3">
                <div class="d-flex gap-1">
                    <input type="hidden" id="comment-id-publication" value="" name="idPublication">
                    <input type="text" class="form-control" placeholder="Write a comment ... " name="commentText"
                        id="comment-text">
                    <button id="btn-comment" class="btn btn-outline-primary">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>