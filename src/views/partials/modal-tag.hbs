<div class="modal fade" id="modal-tag" tabindex="-1" role="dialog" aria-labelledby="modal-tag" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-btnSuperior-modal-tag">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="swiper mySwiper">
            <div class="swiper-wrapper" id="content-swiper-wrapper">
              <div class="swiper-slide"> <input type="radio" name="check-tag" id="check-pants" value="pants"> <label for="check-pants"> <img id="icon-pants"
                    src="pngIcons/pants.png" alt=""> </label> </div>
              <div class="swiper-slide"> <input type="radio" name="check-tag" id="check-sun-hat" value="sun-hat"> <label for="check-sun-hat" > <img id="icon-sun-hat"
                    src="pngIcons/sun-hat.png" alt=""> </label> </div>
              <div class="swiper-slide"> <input type="radio" name="check-tag" id="check-sandals" value="sandals"> <label for="check-sandals" > <img id="icon-sandals"
                    src="pngIcons/sandals.png" alt=""> </label> </div>
              <div class="swiper-slide"> <input type="radio" name="check-tag" id="check-dress" value="dress"> <label for="check-dress" > <img id="icon-dress"
                    src="pngIcons/dress.png" alt=""> </label> </div>
              <div class="swiper-slide"> <input type="radio" name="check-tag" id="check-t-shirt" value="t-shirt"> <label for="check-t-shirt" > <img id="icon-t-shirt"
                    src="pngIcons/t-shirt.png" alt=""> </label> </div>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>

          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Where you bought it:</label>
            <input type="text" class="form-control" id="store-modal-tag">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">How much did it cost:</label><br>
            <input type="number" name="price-modal-tag" id="price-modal-tag">
          </div>
          <div id="errors-form-publicar-tag">

          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="close-modal-tag">Close</button>
        <button type="button" class="btn btn-primary" id="add-modal-tag">Add Tag</button>
      </div>
    </div>
  </div>
</div>

<!-- Swiper JS -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 3,
    spaceBetween: 30,
    slidesPerGroup: 3,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>