<script>

  $.ajax({
    url: "/allUsers",
    method: "POST",
    success: (res) => {
      console.log(res.allUsers);

      const names = []

      res.allUsers.forEach(element => {
        names.push(element.userName)
      });

      $("#search").on("keyup", e => {
        names.forEach(element => {
          if (element.includes(e.target.value.toLowerCase())) console.log(element)
        });
      });

    },
    error: () => {
      alert("error")
    }

  })


</script>